unit CodigoEjercicio1;

interface

uses
  Winapi.Windows, Winapi.Messages, System.SysUtils, System.Variants, System.Classes, Vcl.Graphics,
  Vcl.Controls, Vcl.Forms, Vcl.Dialogs, NumerosRacionales, Vcl.StdCtrls;

type
  TForm1 = class(TForm)
    Button1: TButton;
    Button2: TButton;
    Button3: TButton;
    Memo1: TMemo;
    Button4: TButton;
    Button5: TButton;
    Button6: TButton;
    Edit1: TEdit;
    Edit2: TEdit;
    Label1: TLabel;
    Label2: TLabel;
    procedure Button1Click(Sender: TObject);
    procedure Button2Click(Sender: TObject);
    procedure Button3Click(Sender: TObject);
    procedure Button4Click(Sender: TObject);
  private
    { Private declarations }
  public
    { Public declarations }
  end;

var
  Form1: TForm1;

implementation

{$R *.dfm}

procedure TForm1.Button1Click(Sender: TObject);
Var Numero1: Double;
  Numero2: Double;
  Suma : NumerosR;
  Result : Double;
begin
  Numero1 := strtoint(Edit1.Text);
  Numero2 := strtoint(Edit2.Text);
  Result := Suma.Suma(Numero1,Numero2);
  memo1.Lines.Add('El resultado de la suma es ' + Result.ToString);
end;

procedure TForm1.Button2Click(Sender: TObject);
Var Numero1: Double;
  Numero2: Double;
  Resta : NumerosR;
  Result : Double;
begin
  Numero1 := strtoint(Edit1.Text);
  Numero2 := strtoint(Edit2.Text);
  Result := Resta.Resta(Numero1,Numero2);
  memo1.Lines.Add('El resultado de la resta es ' + Result.ToString);
end;

procedure TForm1.Button3Click(Sender: TObject);
Var Numero1: Double;
  Numero2: Double;
 Multiplicacion : NumerosR;
  Result : Double;
begin
  Numero1 := strtoint(Edit1.Text);
  Numero2 := strtoint(Edit2.Text);
  Result := Multiplicacion.Multiplicar(Numero1,Numero2);
  memo1.Lines.Add('El resultado de la multiplicacion es ' + Result.ToString);
end;

procedure TForm1.Button4Click(Sender: TObject);
Var Numero1: Double;
  Numero2: Double;
  Dividir : NumerosR;
  Result : Double;
begin
  Numero1 := strtoint(Edit1.Text);
  Numero2 := strtoint(Edit2.Text);
  Result := Dividir.Dividir(Numero1,Numero2);
  memo1.Lines.Add('El resultado de la division es ' + Result.ToString);
end;


end.
